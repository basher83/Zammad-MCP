{
  "permissions": {
    "allow": [
      "Bash(eza:*)",
      "Bash(fd:*)",
      "Bash(mkdir:*)",
      "Bash(git:*)",
      "Bash(rg:*)",
      "Bash(chmod:*)",
      "Bash(uv:*)",
      "Bash(gh issue create:*)",
      "Bash(curl:*)",
      "WebFetch(domain:docs.codacy.com)",
      "WebFetch(domain:github.com)",
      "Bash(gh api:*)",
      "Bash(gh pr comment:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)"
    ],
    "deny": []
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "zammad"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/pre_tool_use.py"
          }
        ]
      }
    ]
  }
}