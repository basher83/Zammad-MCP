{
  // markdownlint-cli2 configuration
  // Docs: https://github.com/DavidAnson/markdownlint-cli2

  // Glob patterns to match markdown files
  "globs": [
    "**/*.md"
  ],

  // Directories and files to ignore during linting
  // These patterns use glob syntax and are applied at the root for best performance
  "ignores": [
    // Node modules and dependencies
    "node_modules/**",

    // Python virtual environment
    ".venv/**",

    // Build and distribution directories
    "dist/**",
    "build/**",

    // Claude Code internal directories (not relevant to codebase)
    ".claude/**",

    // AI documentation (not relevant to codebase)
    "docs/ai-docs/**",

    // Developer personal notes (not relevant to codebase)
    "docs/dev/**",

    // Git and cache directories
    ".git/**",
    "**/__pycache__/**",
    "**/.pytest_cache/**",

    // Temporary and backup files
    "**/*.tmp",
    "**/*.bak"
  ],

  // Use .gitignore files for additional ignore patterns
  "gitignore": true,

  // Output configuration
  "outputFormatters": [
    ["markdownlint-cli2-formatter-default"]
  ]
}
